<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".PracticalTest01MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="48dp"
        android:columnCount="3"
        android:rowCount="3">

        <Button
            android:id="@+id/nord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:ems="6"
            android:gravity="center"
            android:text="NORTH" />

        <Button
            android:id="@+id/vest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:ems="6"
            android:gravity="center"
            android:text="WEST" />

        <Button
            android:id="@+id/est"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center"
            android:ems="6"
            android:gravity="center"
            android:text="EST" />

        <Button
            android:id="@+id/sud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:ems="6"
            android:gravity="center"
            android:text="SOUTH" />

    </GridLayout>

    <EditText
        android:id="@+id/afisare_coordonate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:gravity="left"
        android:saveEnabled="true"
        android:text="North, East, South, West" />

    <EditText
        android:id="@+id/numar_puncte_cardinale_selectate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:saveEnabled="true"
        android:text="0" />

    <Button
        android:id="@+id/activitate_secundara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NAVIGATE TO SECOND ACTIVITY"
        android:layout_marginTop="50dp"
        android:gravity="center" />

</LinearLayout>
